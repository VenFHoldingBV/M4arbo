<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="cancel_reason_wizard_form_view" model="ir.ui.view">
        <field name="model">cancel.reason.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                	<field name="reason" nolable="1"/>
                </group>
                <footer>
                	<button type="object" name="submit_reason" string="Submit" class="btn btn-primary"/>
                	<button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>