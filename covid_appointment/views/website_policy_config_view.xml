<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_policy_form" model="ir.ui.view">
        <field name="model">custom.website.policy</field>
        <field name="arch" type="xml">
            <form>
                <field name="company_covid_policy"/>
            </form>
        </field>
    </record>

    <record id="view_policy_tree" model="ir.ui.view">
        <field name="model">custom.website.policy</field>
        <field name="arch" type="xml">
            <tree>
                <field name="company_covid_policy"/>
            </tree>
        </field>
    </record>
    <record id="appointment_policy_action" model="ir.actions.act_window">
        <field name="name">Terms and Policy</field>
        <field name="res_model">custom.website.policy</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem name="Terms and Policy"
              action="appointment_policy_action" id="menu_action_policy"
              parent="website.menu_website_global_configuration"
              sequence="10"
    />


</odoo>